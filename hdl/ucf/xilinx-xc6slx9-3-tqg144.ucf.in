NET "Fin[18]"                   LOC = P51 | IOSTANDARD = LVCMOS33 | PULLDOWN;       # VR4
NET "Fin[19]"                   LOC = P50 | IOSTANDARD = LVCMOS33 | PULLDOWN;       # VR3
