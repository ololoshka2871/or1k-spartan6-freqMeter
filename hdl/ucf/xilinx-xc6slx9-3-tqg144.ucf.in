## TIMINGS
NET "clk_i" TNM_NET = "clk_i_grp";
TIMESPEC "TS_clk_i" = PERIOD "clk_i_grp" @INPUT_CLOCK_PERIOD_NS_F@ns HIGH;

TIMESPEC "TS_clk_to_clk_ref" = FROM "clk" TO "clk_ref" TIG;
TIMESPEC "TS_clk_ref_to_clk" = FROM "clk_ref" TO "clk" TIG;

